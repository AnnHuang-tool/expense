<div class="container">
  <div class="row">
    <div class="form-group col-6 mx-auto mt-4">
      <div class="title ">
        <h7>必填欄位*</h7>
        <h2 class="text-center">請輸入你的支出</h2>
      </div>

      <form class="mt-4" action="/records" method="POST">

        <div class="form-group row">
          <label for="name" class="col-sm-2 col-form-label">名稱*: </label>
          <div class="col-sm-10">
            <input type="text" class="form-control" id="name" name="name" value="{{#if name}}{{name}}{{/if}}" required>
          </div>
        </div>

        <div class="form-group row">
          <label for="store" class="col-sm-2 col-form-label">商家: </label>
          <div class="col-sm-10">
            <input type="text" class="form-control" id="store" name="store" value="{{#if store}}{{store}}{{/if}}">
          </div>
        </div>

        <div class="form-group row">
          <label for="date" class="col-sm-2 col-form-label">日期*: </label>
          <div class="col-sm-10">
            <input type="date" class="form-control" id="date" name="date" value="{{#if date}}{{date}}{{/if}}" required>
          </div>
        </div>

        <div class="form-group row">
          <label for="category" class="col-sm-2 col-form-label">類別*: </label>
          <div class="col-sm-10">
            <select class="form-control" id="category" name="category" required>
              <option value="" disabled selected hidden>選擇</option>
              {{#each categories}}
              <option>{{this.categoryName}}</option>
              {{/each}}
            </select>
          </div>
        </div>
        {{#if alert}}
        <div class="alert alert-danger" role="alert">
          {{alert}}
        </div>
        {{/if}}
        <div class="form-group row">
          <label for="amount" class="col-sm-2 col-form-label">金額*: </label>
          <div class="col-sm-10">
            <input type="number" class=" form-control" id="amount" name="amount" value="{{#if amount}}{{amount}}{{/if}}"
              required>
          </div>
        </div>

        <div class="add-button text-center mt-4 mx-auto" style="width:30%;">
          <button type="submit" class="btn btn-primary btn-block">新增支出</button>
        </div>

      </form>
    </div>
  </div>
</div>